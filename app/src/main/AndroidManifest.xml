<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.applligent.bagoapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_bago"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_bago"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".Activity.ProfileuploadActivity"></activity>
        <activity android:name=".Activity.CameraActivity" />
        <activity android:name=".Activity.Screen4" />
        <activity android:name=".Activity.ChatActivity" />
        <activity android:name=".Activity.Screen3" />
        <activity
            android:name=".Activity.Screen2"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".Activity.Screen1" />
        <activity android:name=".Activity.ProfileActivity" />
        <activity android:name=".Activity.ForgotPasswordActivity" />
        <activity android:name=".Activity.SignupActivity" />
        <activity android:name=".Activity.Dashboard" />
        <activity android:name=".Activity.SigninActivity" />
        <activity android:name=".Activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>